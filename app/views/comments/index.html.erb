<h1>Goooooogle</h1>
<%= link_to "새로 등록", new_comment_path %><br>
<input type="search" id="search" placeholder="검색">
<div id="result"></div>
<script>
  $(document).ready(function(){
    $("#search").change(function() {
      query = $(this).val();
      $.get('/comments/search?query='+query, function(data) {
        $("#result").html('');
        for(i=0;i<data.length;i++) {
          $("#result").append("<li>"+data[i].content+"</li>");
        }
      })
    })
  });
</script>